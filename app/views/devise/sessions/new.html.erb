<div class="text-center signin-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
      <%= devise_error_messages! %>
      <h1 class="h2 mb-3 font-weight-normal">Please log in</h1>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: :email, class: "form-control", id: "inputEmail"%>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: :password, class: "form-control", id: "inputPassword" %>
      </div>
      </br>
      <% if devise_mapping.rememberable? -%>
        <div class="field checkbox mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
      </div>
  <% end %>

  <!--<%= render "devise/shared/links" %>-->
</div>
