<div>
  <% if user_signed_in? %>
    <%= link_to 'Nueva noticia', new_article_path, class: "btn btn-primary btn-lg" %>
  <% end %>
  <br>
  <br>
  <% if @articles %>
    <div class="container card">
      <div class="row font-weight-bold">
        <div class="col-md-4">Noticia</div>
        <div class="col-md-4">Fecha de publicación</div>
        <div class="col-md-4">Acciones</div>
      </div>

      <% @articles.each do |article| %>
        <hr>
        <div class="row">

          <div class="col-md-4"><%= link_to article.title, article_path(article)%></div>

            <div class="col-md-4"><%= article.created_at %></div>
            <div class="col-md-4">
              <%= link_to 'Edit', edit_article_path(article) %>
              <%= link_to 'Destroy', article_path(article),
                      method: :delete,
                      data: { confirm: '¿Estás seguro?' } %>
            </div>
        </div>

      <% end %>
    </div>
  <% else %>
    <h3 class="text-center"> No hay noticias </h3>
  <% end %>
</div>
