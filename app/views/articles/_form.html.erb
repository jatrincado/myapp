<%= form_with model: @article, local: true do |form| %>

  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <p>
      <%= form.label "Titulo" %><br>
      <%= form.text_field :title, class: "form-control" %>
    </p>
  </div>
  <p>
    <%= form.label "Bajada" %><br>
    <%= form.text_area :summary, class: "form-control" %>
  </p>

  <p>
    <%= form.label "Contenido" %><br>
    <%= form.text_area :body, class: "form-control" %>
  </p>

  <p>
    <%= form.label "Referencia" %><br>
    <%= form.text_field :link, class: "form-control" %>
  </p>

  <p>
    <%= form.submit 'Crear noticia', class: "btn btn-lg btn-primary btn-block" %>
  </p>
<% end %>
