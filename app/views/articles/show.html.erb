<div class="card mb-4 box-shadow">
    <div class="card-body">

      <div class="card-title">
        <h4><%= link_to @article.title, article_path(@article)%></h4>
        <p class="lead"><%= @article.summary %></p>
      </div>
      <hr>
      <p class="card-text"><%= @article.body %></p>
      <div class="d-flex justify-content-between align-items-center">
        <a href="<%= @article.link %>" class="btn btn-sm btn-outline-primary">Link</a>
        <h5 class="text-muted"><%= @article.comments.count %> comments</h5>
        <small class="text-muted">Posted <%= @article.created_at %></small>
      </div>

      <hr>
      <div class="d-flex align-items-center">
        <div>
        <%= render 'comments/form' %>
        </div>
        <% if @article.comments.count > 0 %>
          <div class="comments-stream">
            <%= render @article.comments.reverse %>
          </div>
        <% end %>
      </div>



        <% if user_signed_in? %>
          <%= link_to 'Editar', edit_article_path(@article) %>
          <%= link_to 'Atrás', articles_path %>
        <% else %>
          <%= link_to 'Atrás', root_path %>
        <% end %>


    </div>
</div>
